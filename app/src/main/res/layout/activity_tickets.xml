<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201F1F"
    tools:context=".views.TicketsActivity">

   <LinearLayout
       android:id="@+id/ln"
       android:layout_width="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_height="wrap_content">

       <ImageView
           android:layout_marginTop="20dp"
           android:layout_width="wrap_content"
           android:layout_height="300dp"
           android:src="@drawable/tc"
           android:contentDescription="TODO" />

       <TextView
           android:id="@+id/tv_tenphim"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Tên Phim"
           android:layout_marginTop="10dp"
           android:textSize="27sp"
           android:textColor="#fff"
           android:shadowRadius="10"
           android:shadowDy="5"
           android:shadowDx="5"
           android:shadowColor="#ccc"
           android:textStyle="italic"/>

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/TextInputLayOutName"
           style="@style/LoginTextInputLayoutStyle"
           android:layout_width="320dp"
           android:layout_marginTop="25dp"
           app:counterEnabled="true"
           app:endIconMode="clear_text"
           app:errorEnabled="true"
           android:textColorHint="#fff"
           android:layout_height="60dp"
           app:startIconTint="#fff">

           <com.google.android.material.textfield.TextInputEditText
               android:id="@+id/ip_chonngay"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Chọn Ngày Xem"
               android:textColor="#fff"
               android:inputType="text"
               tools:ignore="TouchTargetSizeCheck" />
       </com.google.android.material.textfield.TextInputLayout>

       <Spinner
           android:id="@+id/spn_chongio"
           android:layout_width="320dp"
           android:layout_height="48dp"
           android:layout_marginTop="20dp" />
   </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_below="@+id/ln"
        android:orientation="horizontal">

        <Button
            android:layout_width="120dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/background_button_tintuc"
            android:text="Đặt vé"
            android:textColor="#fff"
            android:shadowColor="#ccc"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="120dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/background_button_tintuc"
            android:text="Hủy vé"
            android:textColor="#fff"
            android:shadowColor="#ccc"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>