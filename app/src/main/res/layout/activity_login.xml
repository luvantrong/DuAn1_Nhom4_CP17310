<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trai_tim"
    tools:context=".views.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:background="#33A19D9D">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN NOW"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="#fff"
            android:gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayOutName"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            android:textColorHint="#fff"
            app:startIconTint="#fff"
            app:startIconDrawable="@drawable/ic_user"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditTextInputLayOutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:textColor="#fff"
                android:inputType="text"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayOutPass"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:textColorHint="#fff"
            app:startIconTint="#fff"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/ic_pass">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditTextInputLayOutPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#fff" />

        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/chkShowPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Password"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_gravity="left"
            android:button="@drawable/custom_checkbox"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="70dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="New User? "
                android:textColor="#fff" />
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Here"
                android:textColor="#24DCCA" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:background="@drawable/background_button_tintuc"
            android:text="Login"
            android:textAllCaps="false"
            android:onClick="onLoginClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Or Login with"
            android:textColor="#fff" />

        <Button
            android:id="@+id/bt_fb"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_fb"
            android:drawableStart="@drawable/ic_fb"
            android:drawableLeft="@drawable/ic_fb"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Sign In FaceBook"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="17dp" />

        <Button
            android:id="@+id/bt_gg"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/custom_gg"
            android:drawableStart="@drawable/ic_gg"
            android:drawableLeft="@drawable/ic_gg"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="Sign In Google"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="17dp" />
    </LinearLayout>


</LinearLayout>